{%- assign blog = blogs[block.settings.footer_blog] -%}
{% assign article = blog.articles | first %}
<div class="article">
    <a href="{{ article.url }}"><h3>{{ article.title }}</h3></a>
    <div class="body">
        {% if article.excerpt.size > 0 %}
            {{ article.excerpt }}
        {% else %}
            {{ article.content | strip_html | truncate: 150 }}
        {% endif %}
    </div>
</div>
