<ul class="mega-menu__container" {{ block.shopify_attributes }}>
    {% if block.settings.image != blank %}
        <li class="image image-{{block.settings.image_position}}">
            <img data-src="{{ block.settings.image | img_url: '250x' }}" alt="" class="lazyload" />
        </li>
    {% endif %}
    {% if link.levels %}
        {% for childlink in link.links %}
            <li {%if childlink.links %} class="mega-menu-2" {% endif %}>
            <a href="{{ childlink.url }}" class="mega-menu__heading">{{ childlink.title }}</a>
                {% if childlink.links %}
                    <ul>
                    {% for grandchildLink in childlink.links %}
                        <li>
                        <a href="{{ grandchildLink.url }}">
                            {{ grandchildLink.title }}
                        </a>
                        </li>
                    {% endfor %}
                    </ul>
                {% endif %}
            </li>
            {% comment %} <div class="mega-menu__container__col">
                <div class="mega-menu__container__col__text">
                    <a class="column_header" href="{{ childlink.url }}">
                        {{ childlink.title }}
                    </a>
                    {% if childlink.links %}
                        <ul>
                        {% for grandchildLink in childlink.links %}
                            <li>
                            <a href="{{ grandchildLink.url }}">
                                {{ grandchildLink.title }}
                            </a>
                            </li>
                        {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div> {% endcomment %}
        {% endfor %}

        {% comment %} More than one column {% endcomment %}
        {% comment %} <div class="mega-menu__container__col">
            <div class="mega-menu__container__col__text">
                <h4>Shop By</h4>
                <ul>
                    <li>Tops</li>
                    <li>Dresses</li>
                    <li>Bottoms</li>
                    <li>Sweatshirts</li>
                    <li>Sweaters</li>
                </ul>
            </div>
        </div>
        <div class="mega-menu__container__col">
            <div class="mega-menu__container__col__text">
                <h4>Featured</h4>
                <ul>
                    <li>New Arrivals</li>
                    <li>Best Sellers</li>
                    <li>Back in Stock</li>
                </ul>
            </div>
        </div> {% endcomment %}
    {% else %}
        
        
    {% endif %}
</ul>