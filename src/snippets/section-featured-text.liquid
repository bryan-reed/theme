<div class="featured-text container" {{ block.shopify_attributes }} data-block="{{block.id}}">
   <h{{block.settings.title_size | plus: '1'}}>{{block.settings.title}}</h{{block.settings.title_size | plus: '1'}}>
   {% assign validColumns = false %}
   {% for i in (1..4) %}
    {% assign border = 'border-' | append: i %}
    {% assign content = 'content-' | append: i %}
    {% assign borderSize = 'border_size-' | append: i %}
    {% if block.settings[content] != blank %}
        {% assign validColumns = true %}
            <div class="content border-{{block.settings[border]}} border--{{block.settings[borderSize]}}">
                <div class="rte">{{block.settings[content]}}</div>
            </div>
        {% endif %}
   {% endfor %}
   {% if validColumns == false %}
        <div class="content border-normal border--1">
