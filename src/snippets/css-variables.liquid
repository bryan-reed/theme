<style>
  {{ settings.font_heading | font_face }}
  {{ settings.font_body | font_face }}

  {%- assign font_body_bold = settings.font_body | font_modify: 'weight', 'bolder' -%}
  {%- assign font_body_bold_italic = font_body_bold | font_modify: 'style', 'italic' -%}

  {{ font_body_bold | font_face }}
  {{ font_body_bold_italic | font_face }}

  :root {
    --color-accent: {{ settings.color_accent }};
    --color-body-text: {{ settings.color_body_text }};
    --color-main-background: {{ settings.color_main_bg }};
    --color-border: {{ settings.color_body_text | color_lighten: 50 }};

    --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
    --font-body-weight: {{ settings.font_body.weight }};
    --font-body-style: {{ settings.font_body.style }};
    --font-body-bold-weight: {{ font_body_bold.weight | default: 'bold' }};

    --color-button-bg: {{settings.color_button_bg}};
    --color-button-text: {{settings.color_button_text}};
    --color-link: {{settings.link_color}};

    --footer-background-color: {{settings.footer_background_color}};
    --footer-text-color: {{settings.footer_text_color}};
    --footer-link-color: {{settings.footer_link_color}};
    --footer-newsletter-input-bg: {{settings.footer_newsletter_input_bg}};
    --footer-newsletter-input-text: {{settings.footer_newsletter_input_text}};
    --footer-newsletter-button-bg: {{settings.footer_newsletter_button_bg}};
    --footer-newsletter-button-text: {{settings.footer_newsletter_button_text}};

    --promo-background-color: {{settings.promo_background_color}};
    --promo-text-color: {{settings.promo_text_color}};

    --nav-color: {{settings.nav_color}};
    --nav-hover-color: {{settings.nav_hover_color}};
    --nav-background-color: {{settings.nav_bg_color}};
    --nav-dropdown-color: {{settings.nav_dd_color}};
    --nav-dropdown-hover-color: {{settings.nav_dd_hover_color}};
    --nav-dropdown-background-color: {{settings.nav_dd_bg_color}};
    --nav-megamenu-color: {{settings.nav_mm_color}};
    --nav-megamenu-hover-color: {{settings.nav_mm_hover_color}};
    --nav-megamenu-background-color: {{settings.nav_mm_bg_color}};

  }
</style>
